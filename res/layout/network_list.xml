<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#0D0D0D"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:text="@string/netsystem"
        android:textColor="#0FB3DB"
        android:textSize="36sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8" 
        android:orientation="horizontal">

        <TextView
            android:id="@+id/system_firmware_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawable="@color/selector"
            android:focusable="true"
            android:textColor="#FFFFFF"
            android:textSize="32sp" />

        <!-- ProgressBar
            android:id="@+id/firmware_progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#00F0F0F0"
            android:max="100"
            android:progress="50" />
             -->
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:text="@string/netsystemapp"
        android:textColor="#0FB3DB"
        android:textSize="36sp" />

    <ListView
        android:id="@+id/update_app_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5" />

    

</LinearLayout>